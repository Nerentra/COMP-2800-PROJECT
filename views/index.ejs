        <!-- Left Side: Overview, Features, About Us and Contact -->
        <div class="hidden md:flex w-full">
          <ul class="flex flex-row">
            <li class="px-4 py-2">
              <a href="#overview">Getting Started</a>
            </li>
            <li class="px-4 py-2">
              <a href="#features">Features</a>
            </li>
            <li class="px-4 py-2">
              <a href="#about">About Us</a>
            </li>
            <li class="px-4 py-2">
              <a href="#contact">Contact</a>
            </li>
          </ul>
          <!-- Right Side: Login / Sign Up -->
          <div class="flex w-full justify-end">
            <div class="inline-block">
              <a href="/login" class="px-4 py-2 bg-quietquest-gold text-quietquest-dark rounded-md no-underline font-afacad text-base hover:bg-quietquest-dark-gold transition-colors duration-200">Login / Sign Up</a>
